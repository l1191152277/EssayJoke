<resources>

    <!-- Base Dialog theme. -->
    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <!-- Customize your theme here. -->
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否浮现在Activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!-- 无标题 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>

        <item name="android:windowNoTitle">true</item>

    </style>
    <!-- dialog 底部弹出动画 -->
    <style name="DialogFromBottomAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_from_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_from_bottom_out</item>

    </style>
</resources>
